@model SmartFoundation.UI.ViewModels.SmartPrint.SmartPrintDocument



<div class="smart-print bg-white text-gray-900 shadow-lg rounded-2xl p-8 print:shadow-none print:rounded-none print:p-0"
     dir="@Model.Page.Direction"
     style="font-family: Tajawal, sans-serif;">

    <!-- ===== العنوان الرئيسي ===== -->
    <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-emerald-700 tracking-wide">@Model.Title</h1>
        @if (!string.IsNullOrEmpty(Model.SubTitle))
        {
            <h2 class="text-lg text-gray-500 italic">@Model.SubTitle</h2>
        }
    </div>

    <!-- ===== الترويسات ===== -->
    @if (Model.Headers?.Count > 0)
    {
        <header class="print-headers mb-6 border-b border-gray-200 pb-2">
            @foreach (var header in Model.Headers)
            {
                <div class="print-header @(header.Slot) space-y-2"
                     style="@(header.HeightCm.HasValue ? $"height:{header.HeightCm}cm" : "")">
                    @foreach (var block in header.Blocks)
                    {
                        @await Html.PartialAsync("Components/SmartPrint/_PrintBlock", block)
                    }
                </div>
            }
        </header>
    }

    <!-- ===== الجسم ===== -->
    <main class="print-body space-y-6">
        @foreach (var block in Model.Blocks)
        {
            @await Html.PartialAsync("Components/SmartPrint/_PrintBlock", block)
        }
    </main>

    <!-- ===== الفوتر ===== -->
    @if (Model.Footers?.Count > 0)
    {
        <footer class="print-footers mt-10 border-t border-gray-200 pt-2 text-sm text-gray-500">
            @foreach (var footer in Model.Footers)
            {
                <div class="print-footer @(footer.Slot) space-y-2"
                     style="@(footer.HeightCm.HasValue ? $"height:{footer.HeightCm}cm" : "")">
                    @foreach (var block in footer.Blocks)
                    {
                        @await Html.PartialAsync("Components/SmartPrint/_PrintBlock", block)
                    }
                </div>
            }
        </footer>
    }
</div>
