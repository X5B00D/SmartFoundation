@model SmartFoundation.UI.ViewModels.SmartCharts.ChartCardConfig
@using SmartFoundation.UI.ViewModels.SmartCharts
@using System.Text.Json
@using System.Text.Encodings.Web

@{
    var hostId = $"bullet_{Model.Id}";
    var cfgId = $"{hostId}_cfg";

    var cfg = new
    {
        id = hostId,
        dir = (Model.Dir ?? "rtl").ToLower(),
        valueFormat = string.IsNullOrWhiteSpace(Model.BulletValueFormat) ? "0" : Model.BulletValueFormat,
        showLegend = Model.BulletShowLegend,
        items = (Model.Bullets ?? new List<BulletItem>()).Select(b => new
        {
            key = b.Key,
            label = b.Label,
            actual = (double)b.Actual,
            target = (double)b.Target,
            max = (double)(b.Max <= 0 ? 100 : b.Max),
            okFrom = (double)b.OkFrom,
            goodFrom = (double)b.GoodFrom,
            color = b.Color,
            unit = b.Unit,
            href = b.Href
        }).ToList()
    };

    var json = JsonSerializer.Serialize(cfg, new JsonSerializerOptions
    {
        Encoder = JavaScriptEncoder.Default,
        PropertyNamingPolicy = JsonNamingPolicy.CamelCase
    });
}

<div id="@hostId" class="smart-bullet" data-config-id="@cfgId"></div>

<script type="application/json" id="@cfgId">
    @Html.Raw(json)
</script>
