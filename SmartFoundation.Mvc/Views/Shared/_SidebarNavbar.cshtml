        const menuData = @Html.Raw(JsonSerializer.Serialize(
                                                Model ?? new List<MenuItem>(),
                                                new JsonSerializerOptions { Encoder = JavaScriptEncoder.UnsafeRelaxedJsonEscaping }
                                ))

        console.log("Menu data:", menuData);

        const currentPath = window.location.pathname.toLowerCase();

        function cleanMenuLink(link) {
            if (!link || typeof link !== "string") return "";
            let cleaned = link.trim();

            // ../Employee -> Employee
            while (cleaned.startsWith("../")) {
                cleaned = cleaned.substring(3);
            }
            // /Employee -> Employee
            if (cleaned.startsWith("/")) {
                cleaned = cleaned.substring(1);
            }
            // /BuildingClass.aspx -> /BuildingClass
            if (cleaned.toLowerCase().endsWith(".aspx")) {
                cleaned = cleaned.substring(0, cleaned.length - 5);
            }

            return cleaned;
        }

        function escapeHtml(text) {
            const div = document.createElement("div");
            div.textContent = text ?? "";
            return div.innerHTML;
        }






            // ØªØ±Ø¬Ø¹ true Ø¥Ø°Ø§ ÙƒØ§Ù† ØªØ­Øª Ù‡Ø°Ø§ Ø§Ù„Ø¹Ù†ØµØ± Ø£ÙŠ Ø§Ø¨Ù† (Ø£Ùˆ Ø§Ø¨Ù† Ø§Ø¨Ù†...) ØµÙØ­ØªÙ‡ Ø§Ù„Ø­Ø§Ù„ÙŠØ© Ù†Ø´Ø·Ø©
    function hasActiveChildRecursive(item) {
        if (!Array.isArray(item.Children)) return false;

        for (const child of item.Children) {
            const rawController = child.MPLink ?? child.mpLink ?? "";
            const rawAction    = child.MenuLink ?? child.menuLink ?? "";

            const controller = cleanMenuLink(rawController);
            const action     = cleanMenuLink(rawAction);

            const childHasChildren = Array.isArray(child.Children) && child.Children.length > 0;
            const hasAnyLinkInfo   = (controller !== "" || action !== "");
            const isClickableLink  = hasAnyLinkInfo && !childHasChildren;

            let itemLink = "#";
            if (isClickableLink) {
                if (controller && action) {
                    itemLink = `/${controller}/${action}`;
                } else if (action) {
                    itemLink = `/${action}`;
                } else if (controller) {
                    itemLink = `/${controller}`;
                }
            }

            const isActive = isClickableLink && currentPath === itemLink.toLowerCase();

            if (isActive || hasActiveChildRecursive(child)) {
                return true;
            }
        }

        return false;
    }









