<script>
  // ================================================================
  // ğŸ”¹ Multi-Level Menu Renderer for Flowbite Sidebar
  // ================================================================

  // âœ… Serialize backend menu data
  const menuData = @Html.Raw(JsonSerializer.Serialize(
                                                                                                                                                                                                                                                                                                                                                                                                Model ?? new List<MenuItem>(),
        new JsonSerializerOptions { Encoder = JavaScriptEncoder.UnsafeRelaxedJsonEscaping }
        ));

  // âœ… Debug: Check JSON structure in console
  console.log("Menu data:", menuData);

  // âœ… Current page path for active link highlighting
  const currentPath = window.location.pathname.toLowerCase();

  // ------------------------------------------------------------
  // ğŸ”¹ Utility: Clean menu link (removes ../, leading /, .aspx)
  // ------------------------------------------------------------
  function cleanMenuLink(link) {
    if (!link || typeof link !== 'string') return '';
    let cleaned = link.trim();
    // Remove leading ../
    while (cleaned.startsWith('../')) {
      cleaned = cleaned.substring(3);
    }
    // Remove leading /
    if (cleaned.startsWith('/')) {
      cleaned = cleaned.substring(1);
    }
    // Remove .aspx extension
    if (cleaned.toLowerCase().endsWith('.aspx')) {
      cleaned = cleaned.substring(0, cleaned.length - 5);
    }
    return cleaned;
  }

  // ------------------------------------------------------------
  // ğŸ”¹ Utility: Escape HTML to prevent XSS
  // ------------------------------------------------------------
  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  // ------------------------------------------------------------
  // ğŸ”¹ Get child menu items by parent ID
  // ------------------------------------------------------------
  function getChildMenuItems(allItems, parentId) {
    return allItems
      .filter(item => {
        if (parentId === null) {
          // Top-level (Level 1)
          return item.Levels === 1;
        }
        // Level 2 or deeper (Level 3, etc.)
        return item.Parents === parentId;
      })
      .sort((a, b) => (a.MPSerial || 0) - (b.MPSerial || 0));
  }

  // ------------------------------------------------------------
  // ğŸ”¹ Build a single menu item (recursively)
  // ------------------------------------------------------------
  function buildMenuItem(item, allItems, level) {
    const paddingClass = level > 1 ? ' ps-10' : '';
    const baseClasses = 'flex items-center w-full p-2 rounded-lg transition duration-75 group hover:bg-gray-100 hover:text-gray-900 text-gray-900 dark:text-gray-200 dark:hover:bg-gray-700 dark:hover:text-white';
    const linkClasses = level === 1 ? baseClasses : `${baseClasses}${paddingClass}`;

    const menuName = escapeHtml(item.MenuName_A || '');
    let itemLink;
    if (item.Levels === 1 && !item.Parents) {
      // Top-level: just clean the link
      itemLink = '/' + cleanMenuLink(item.MPLink);
    } else if (item.Levels === 2 && item.Parents) {
      // Child: always clean both segments
      const parentItem = allItems.find(x => x.MPID === item.Parents);
      const parentController = parentItem ? cleanMenuLink(parentItem.MPLink) : '';
      const childAction = cleanMenuLink(item.MPLink);
      itemLink = parentController
        ? '/' + parentController + '/' + childAction
        : '/' + childAction;
    } else if (item.Levels > 2 && item.Parents) {
      // Multi-level: always clean both segments
      let ancestor = item;
      while (ancestor.Parents) {
        const parent = allItems.find(x => x.MPID === ancestor.Parents);
        if (!parent) break;
        ancestor = parent;
      }
      const rootController = cleanMenuLink(ancestor.MPLink);
      const currentAction = cleanMenuLink(item.MPLink);
      itemLink = '/' + rootController + '/' + currentAction;
    } else {
      // Fallback for other cases
      itemLink = '/' + cleanMenuLink(item.MPLink);
    }
    const isActive = currentPath === itemLink.toLowerCase();
    const activeClass = isActive ? ' bg-gray-100 dark:bg-gray-700' : '';

    const iconHtml = item.MPIcon && item.MPIcon.trim() !== ''
      ? `<i class="${escapeHtml(item.MPIcon)} w-5 h-5 me-3 text-gray-500 group-hover:text-gray-900 dark:text-gray-400 dark:group-hover:text-white transition-colors duration-200"></i>`
      : '';

    const childItems = getChildMenuItems(allItems, item.MPID);
    const hasChildren = childItems.length > 0;

    let html = '';

    if (hasChildren) {
      const collapseId = `dropdown-${item.MPID}`;
      html += `
      <button type="button"
              class="${linkClasses}${activeClass}"
              data-collapse-toggle="${collapseId}"
              aria-controls="${collapseId}">
        ${iconHtml}
        <span class="flex-1 text-right text-gray-900 whitespace-nowrap dark:text-gray-200">${menuName}</span>
        <svg class="w-4 h-4 text-gray-500 group-hover:text-gray-900 dark:text-gray-400 dark:group-hover:text-white"
             fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd"
                d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
        </svg>
      </button>
      <ul id="${collapseId}" class="hidden py-2 space-y-2">
    `;
      childItems.forEach(child => {
        html += `<li >${buildMenuItem(child, allItems, level + 1)}</li>`;
      });
      html += `</ul>`;
    } else {
      html += `
      <a href="${escapeHtml(itemLink)}"
         class="${linkClasses}${activeClass}">
        ${iconHtml}
        <span class="flex-1 text-gray-900 whitespace-nowrap dark:text-gray-200">${menuName}</span>
      </a>
    `;
    }

    return html;
  }


  function removeDuplicateMenuItems(items) {
    const seen = new Set();
    return items.filter(item => {
      if (seen.has(item.MPID)) return false;
      seen.add(item.MPID);
      return true;
    });
  }

  // ------------------------------------------------------------
  // ğŸ”¹ Build all menu items starting from level 1
  // ------------------------------------------------------------
  function buildMenuItems(items, level) {
    // âœ… Level 1 items are those with Levels === 1
    const rootItems = level === 1 ? getChildMenuItems(items, null) : items;
    let html = '';
    rootItems.forEach(item => {
      html += `<li><hr class="my-1 border-slate-700">${buildMenuItem(item, items, level)}</li>`;
    });
    return html;
  }


  // ------------------------------------------------------------
  // ğŸ”¹ Initialize menu when DOM ready
  // ------------------------------------------------------------
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('menu-container');
    if (container && Array.isArray(menuData)) {
      // âœ… Remove duplicates first
      const uniqueMenuData = removeDuplicateMenuItems(menuData);
      container.outerHTML = buildMenuItems(uniqueMenuData, 1);
    } else {
      console.error("Menu container not found or menuData invalid");
    }
  });
</script>