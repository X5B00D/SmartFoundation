            const rawController = item.MPLink ?? item.mpLink ?? "";
            const rawAction    = item.MenuLink ?? item.menuLink ?? "";

            const controller = cleanMenuLink(rawController);  // ../Employee -> Employee
            const action     = cleanMenuLink(rawAction);      // /BuildingClass.aspx -> BuildingClass

            const hasChildren     = Array.isArray(item.Children) && item.Children.length > 0;
            const hasAnyLinkInfo  = (controller !== "" || action !== "");
            const isClickableLink = hasAnyLinkInfo && !hasChildren;

            // ğŸ”— Ø¨Ù†Ø§Ø¡ Ø§Ù„Ø±Ø§Ø¨Ø· Ø§Ù„Ù†Ù‡Ø§Ø¦ÙŠ
            let itemLink = "#";
            if (isClickableLink) {
                if (controller && action) {
                    itemLink = `/${controller}/${action}`;      // /Employee/BuildingClass
                } else if (action) {
                    itemLink = `/${action}`;
                } else if (controller) {
                    itemLink = `/${controller}`;
                }
            }

            const isActive = isClickableLink && currentPath === itemLink.toLowerCase();
            const activeClass = isActive ? " bg-slate-700 text-slate-50" : "";

            const iconHtml =
