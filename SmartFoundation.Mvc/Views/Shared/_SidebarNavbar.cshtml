<script>
        // ================================================================
        // ğŸ”¹ Multi-Level Menu Renderer for Sidebar
        // ================================================================

        const menuData = @Html.Raw(JsonSerializer.Serialize(
                        Model ?? new List<MenuItem>(),
                        new JsonSerializerOptions { Encoder = JavaScriptEncoder.UnsafeRelaxedJsonEscaping }
                ));

        console.log("Menu data:", menuData);

        const currentPath = window.location.pathname.toLowerCase();

        function cleanMenuLink(link) {
            if (!link || typeof link !== "string") return "";
            let cleaned = link.trim();

            // ../Employee -> Employee
            while (cleaned.startsWith("../")) {
                cleaned = cleaned.substring(3);
            }
            // /Employee -> Employee
            if (cleaned.startsWith("/")) {
                cleaned = cleaned.substring(1);
            }
            // /BuildingClass.aspx -> /BuildingClass
            if (cleaned.toLowerCase().endsWith(".aspx")) {
                cleaned = cleaned.substring(0, cleaned.length - 5);
            }

            return cleaned;
        }

        function escapeHtml(text) {
            const div = document.createElement("div");
            div.textContent = text ?? "";
            return div.innerHTML;
        }

        // ------------------------------------------------------------
        // ğŸ”¹ Ø¨Ù†Ø§Ø¡ Ø¹Ù†ØµØ± ÙˆØ§Ø­Ø¯ (recursive) Ø¨Ø§Ù„Ø§Ø¹ØªÙ…Ø§Ø¯ Ø¹Ù„Ù‰ Children Ù…Ù† JSON
        // ------------------------------------------------------------
        function buildMenuItem(item, level) {
            const paddingClass = level > 1 ? " ps-10" : "";
            const baseClasses =
                "flex items-center w-full p-2 rounded-lg transition duration-75 group " +
                "hover:bg-slate-700 hover:text-slate-50 text-slate-200";
            const linkClasses = level === 1 ? baseClasses : baseClasses + paddingClass;

            const menuName = escapeHtml(item.MenuName_A || item.MenuNameForView || "");

