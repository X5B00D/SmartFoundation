<script>
        // ================================================================
        // 🔹 Multi-Level Menu Renderer for Sidebar
        // ================================================================

        const menuData = @Html.Raw(JsonSerializer.Serialize(
                                                Model ?? new List<MenuItem>(),
                                                new JsonSerializerOptions { Encoder = JavaScriptEncoder.UnsafeRelaxedJsonEscaping }
                                ))

        console.log("Menu data:", menuData);

        const currentPath = window.location.pathname.toLowerCase();

        function cleanMenuLink(link) {
            if (!link || typeof link !== "string") return "";
            let cleaned = link.trim();

            // ../Employee -> Employee
            while (cleaned.startsWith("../")) {
                cleaned = cleaned.substring(3);
            }
            // /Employee -> Employee
            if (cleaned.startsWith("/")) {
                cleaned = cleaned.substring(1);
            }
            // /BuildingClass.aspx -> /BuildingClass
            if (cleaned.toLowerCase().endsWith(".aspx")) {
                cleaned = cleaned.substring(0, cleaned.length - 5);
            }

            return cleaned;
        }

        function escapeHtml(text) {
            const div = document.createElement("div");
            div.textContent = text ?? "";
            return div.innerHTML;
        }






            // ترجع true إذا كان تحت هذا العنصر أي ابن (أو ابن ابن...) صفحته الحالية نشطة
    function hasActiveChildRecursive(item) {
        if (!Array.isArray(item.Children)) return false;

        for (const child of item.Children) {
            const rawController = child.MPLink ?? child.mpLink ?? "";
            const rawAction    = child.MenuLink ?? child.menuLink ?? "";

            const controller = cleanMenuLink(rawController);
            const action     = cleanMenuLink(rawAction);

            const childHasChildren = Array.isArray(child.Children) && child.Children.length > 0;
            const hasAnyLinkInfo   = (controller !== "" || action !== "");
            const isClickableLink  = hasAnyLinkInfo && !childHasChildren;

            let itemLink = "#";
            if (isClickableLink) {
                if (controller && action) {
                    itemLink = `/${controller}/${action}`;
                } else if (action) {
                    itemLink = `/${action}`;
                } else if (controller) {
                    itemLink = `/${controller}`;
                }
            }

            const isActive = isClickableLink && currentPath === itemLink.toLowerCase();

            if (isActive || hasActiveChildRecursive(child)) {
                return true;
            }
        }

        return false;
    }





        // ------------------------------------------------------------
        // 🔹 بناء عنصر واحد (recursive) بالاعتماد على Children من JSON
        // ------------------------------------------------------------
        function buildMenuItem(item, level) {
            const paddingClass = level > 1 ? " ps-10" : "";
            const baseClasses =
                "flex items-center w-full p-2 rounded-lg transition duration-75 group " +
                "hover:bg-slate-700 hover:text-slate-50 text-slate-200";
            const linkClasses = level === 1 ? baseClasses : baseClasses + paddingClass;

            const menuName = escapeHtml(item.MenuName_A || item.MenuNameForView || "");

            // ⭐ ندعم الأسماء الكبيرة/الصغيرة في JSON
            const rawController = item.MPLink ?? item.mpLink ?? "";
            const rawAction    = item.MenuLink ?? item.menuLink ?? "";

            const controller = cleanMenuLink(rawController);  // ../Employee -> Employee
            const action     = cleanMenuLink(rawAction);      // /BuildingClass.aspx -> BuildingClass

            const hasChildren     = Array.isArray(item.Children) && item.Children.length > 0;
            const hasAnyLinkInfo  = (controller !== "" || action !== "");
            const isClickableLink = hasAnyLinkInfo && !hasChildren;

            //  بناء الرابط النهائي
            let itemLink = "#";
            if (isClickableLink) {
                if (controller && action) {
                    itemLink = `/${controller}/${action}`;      // /Employee/BuildingClass
                } else if (action) {
                    itemLink = `/${action}`;
                } else if (controller) {
                    itemLink = `/${controller}`;
                }
            }

            const isActive = isClickableLink && currentPath === itemLink.toLowerCase();
            const activeClass = isActive ? " bg-slate-700 text-slate-50" : "";

            const iconHtml =
                item.MPIcon && item.MPIcon.trim() !== ""
                    ? `<i class="${escapeHtml(
                          item.MPIcon
                      )} me-3 h-5 w-5 text-slate-400 transition-colors duration-200 group-hover:text-slate-50"></i>`
                    : "";

            let html = "";


        if (hasChildren) {
        const collapseId = `dropdown-${item.MPID}`;

        const shouldBeOpen = hasActiveChildRecursive(item);
        const childListClasses = shouldBeOpen ? "py-2 space-y-0" : "hidden py-2 space-y-0";
        const expandedAttr = shouldBeOpen ? 'aria-expanded="true"' : 'aria-expanded="false"';

        html += `
            <button type="button"
                    class="${linkClasses}${activeClass}"
                    data-collapse-toggle="${collapseId}"
                    aria-controls="${collapseId}"
                    ${expandedAttr}>
                ${iconHtml}
                <span class="flex-1 text-right leading-snug break-words whitespace-normal">
                    ${menuName}
                </span>

                <!--  السهم -->
                <svg class="menu-chevron h-4 w-4 text-slate-400 transition-transform duration-200 group-hover:text-slate-50"
                     fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd"
                          d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                          clip-rule="evenodd"></path>
                </svg>
            </button>

            <ul id="${collapseId}" class="${childListClasses}">
        `;

        
            item.Children.forEach((child, idx) => {
                // الخط الفاصل بين القوائم الفرعية 
                   html += `<li>${idx === 0 ? "" : '<div class="menu-sep sm"></div>'}${buildMenuItem(child, level + 1)}</li>`;

           });


        html += `</ul>`;
    }

        else if (isClickableLink) {
        html += `
        <a href="${escapeHtml(itemLink)}"
           class="${linkClasses}${activeClass} sidebar-link"
           data-url="${escapeHtml(itemLink)}">
          ${iconHtml}
        <span class="flex-1 leading-snug break-words whitespace-normal">
            ${menuName}
        </span>
            </a>`;
    }

 
            
            else {
               
                html += `
    <div class="${linkClasses}${activeClass}">
      ${iconHtml}
    <span class="flex-1 leading-snug break-words whitespace-normal">
        ${menuName}
    </span>
        </div>`;
            }

            return html;
        }

        
        function removeDuplicateMenuItems(items) {
            const seen = new Set();
            return items.filter(item => {
                if (seen.has(item.MPID)) return false;
                seen.add(item.MPID);
                return true;
            });
        }

        
        function buildMenuItems(items) {
            const rootItems = items
                .filter(x => x.Levels === 1)
                .sort((a, b) => (a.MPSerial || 0) - (b.MPSerial || 0));

            let html = "";
            rootItems.forEach(item => {
                html += `<li><div class="menu-sep"></div>${buildMenuItem(item, 1)}</li>`;

            });

            return html;
        }

                function setActiveSidebar(url) {
        const path = (url || "").split("?")[0].toLowerCase();

        document.querySelectorAll("a.sidebar-link").forEach(a => {
            a.classList.remove("bg-slate-700", "text-slate-50");

            const itemUrl = (a.getAttribute("data-url") || "").split("?")[0].toLowerCase();
            if (itemUrl === path) {
                a.classList.add("bg-slate-700", "text-slate-50");
            }
        });
    }

    function loadPageIntoMainContent(url) {
        const main = document.getElementById("main-content");

        if (!main) {
            hideMainLoading();
            window.location.href = url;
            return;
        }

        fetch(url, { headers: { "X-Requested-With": "XMLHttpRequest" } })
            .then(function (response) { return response.text(); })
            .then(function (html) {
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, "text/html");

                // ====== 1) تحديث main-content ======
                const newMain = doc.getElementById("main-content");
                if (!newMain) {
                    hideMainLoading();
                    document.body.style.pointerEvents = "auto";
                    window.location.href = url;
                    return;
                }
                main.innerHTML = newMain.innerHTML;

    const currentBc = document.querySelector("#page-header .sf-bc-text");
    const newBc = doc.querySelector("#page-header .sf-bc-text");
    if (currentBc && newBc) {
        currentBc.innerHTML = newBc.innerHTML;
    }


                // ====== 3) تهيئة Flowbite بعد التحديث ======
                if (window.initFlowbite) window.initFlowbite();

                // ====== 4) تحديث الـ URL + title ======
                window.history.pushState({}, "", url);

                const titleEl = doc.querySelector("title");
                if (titleEl && titleEl.textContent) {
                    document.title = titleEl.textContent;
                }

                // ====== 5) تفعيل السايدبار + إنهاء التحميل ======
                setActiveSidebar(url);
                hideMainLoading();
                document.body.style.pointerEvents = "auto";
            })
            .catch(function (err) {
                console.error("Error loading page", err);
                hideMainLoading();
                document.body.style.pointerEvents = "auto";
                window.location.href = url;
            });
    }

    document.addEventListener("DOMContentLoaded", () => {
        const container = document.getElementById("menu-container");
        if (container && Array.isArray(menuData)) {
            const uniqueMenuData = removeDuplicateMenuItems(menuData);
            container.outerHTML = buildMenuItems(uniqueMenuData);
        } else {
            console.error("Menu container not found or menuData invalid");
        }

        // تفعيل العنصر الحالي
        setActiveSidebar(window.location.pathname + window.location.search);

        // تحديث aria-expanded للقوائم (بعد فتح/إغلاق Flowbite)
        document.body.addEventListener("click", function (e) {
            const btn = e.target.closest('button[data-collapse-toggle]');
            if (!btn) return;

            const id = btn.getAttribute("data-collapse-toggle");
            const target = document.getElementById(id);
            if (!target) return;

            requestAnimationFrame(() => {
                const isOpenNow = !target.classList.contains("hidden");
                btn.setAttribute("aria-expanded", isOpenNow ? "true" : "false");
            });
        });

        // الضغط على روابط القائمة (AJAX)
        document.body.addEventListener("click", function (e) {
            const link = e.target.closest("a.sidebar-link");
            if (!link) return;

            // السماح بفتح تبويب جديد/نفس خيارات المتصفح
            if (e.button !== 0 || e.ctrlKey || e.shiftKey || e.metaKey || e.altKey) {
                return;
            }

            e.preventDefault();

            const url = link.getAttribute("data-url");
            if (!url) return;

            showMainLoading();
            document.body.style.pointerEvents = "none";

            // setTimeout(() => {
            //     loadPageIntoMainContent(url);
            // }, 1000);
            loadPageIntoMainContent(url);
        });

        window.addEventListener("popstate", function () {
            loadPageIntoMainContent(window.location.pathname + window.location.search);
        });
    });

    </script>



<script>
    document.addEventListener('DOMContentLoaded', () => {
        const body = document.body;
        const sidebar = document.getElementById('logo-sidebar');
        const pinBtn = document.getElementById('pin-sidebar');
        const toggleSidebarBtn = document.getElementById("toggle-sidebar");

            //  إدارة الحالة
    const SIDEBAR_STATES = {
        PINNED: "sidebar-pinned",
        COLLAPSED: "sidebar-collapsed",
        MOBILE_OPEN: "with-sidebar-open"
    };

    function resetSidebarState() {
        body.classList.remove(
            SIDEBAR_STATES.PINNED,
            SIDEBAR_STATES.COLLAPSED,
            SIDEBAR_STATES.MOBILE_OPEN
        );
    }

    //  زر الهيدر
        toggleSidebarBtn?.addEventListener("click", () => {
        const isOpen = body.classList.contains(SIDEBAR_STATES.MOBILE_OPEN);

        if (isOpen) {
            body.classList.remove(SIDEBAR_STATES.MOBILE_OPEN);
            const backdrop = document.querySelector(".sidebar-backdrop");
            if (backdrop) backdrop.remove();
        } else {
            body.classList.add(SIDEBAR_STATES.MOBILE_OPEN);

            // نتأكد ما فيه خلفية موجودة مسبقًا
            if (!document.querySelector(".sidebar-backdrop")) {
                const backdrop = document.createElement("div");
                backdrop.className = "sidebar-backdrop lg:hidden";
                backdrop.addEventListener("click", () => {
                    body.classList.remove(SIDEBAR_STATES.MOBILE_OPEN);
                    backdrop.remove();
                });
                document.body.appendChild(backdrop);
            }
        }
    });


    //  زر التثبيت
    pinBtn?.addEventListener("click", () => {
        const isPinned = body.classList.contains(SIDEBAR_STATES.PINNED);
        resetSidebarState();
        if (!isPinned) {
            body.classList.add(SIDEBAR_STATES.PINNED);
        } else {
            body.classList.add(SIDEBAR_STATES.COLLAPSED);
        }
    });


        window.addEventListener("resize", () => {
        if (window.innerWidth >= 1024 && window.innerWidth < 1440) {
            resetSidebarState();
            body.classList.add(SIDEBAR_STATES.COLLAPSED);
        } else if (window.innerWidth >= 1440) {
            resetSidebarState();
            body.classList.add(SIDEBAR_STATES.PINNED);
        } else {
            resetSidebarState();
        }
    });

    //  عند التحميل
        if (window.innerWidth >= 1024) {
        body.classList.add(SIDEBAR_STATES.PINNED);
    } else {
        body.classList.add(SIDEBAR_STATES.MOBILE_OPEN); 
    }

        
        const mobileToggleBtn = document.querySelector('[data-drawer-toggle="logo-sidebar"]');

        let isHoverTriggered = false; 

        //  زر القائمة (موبايل)
        if (mobileToggleBtn) {
            mobileToggleBtn.addEventListener('click', () => {
                const isOpen = !sidebar.classList.contains('translate-x-full');
                if (isOpen) {
                    sidebar.classList.add('translate-x-full');
                    const backdrop = document.querySelector('[drawer-backdrop]');
                    if (backdrop) backdrop.remove();
                } else {
                    sidebar.classList.remove('translate-x-full');
                    if (!document.querySelector('[drawer-backdrop]')) {
                        const backdrop = document.createElement('div');
                        backdrop.className = 'fixed inset-0 z-30 bg-black/50 lg:hidden';
                        backdrop.setAttribute('drawer-backdrop', '');
                        backdrop.addEventListener('click', () => {
                            sidebar.classList.add('translate-x-full');
                            backdrop.remove();
                        });
                        document.body.appendChild(backdrop);
                    }
                }
