

@model SmartFoundation.UI.ViewModels.SmartPage.SmartPageViewModel
@{
    ViewData["Title"] = Model.PageTitle;
}
@await Component.InvokeAsync("SmartRenderer", new { model = Model })


@if (ViewBag.DebugInfo != null)
{
    <div class="bg-yellow-50 border border-yellow-300 rounded p-4 mb-4" dir="ltr">
        <h3 class="font-bold text-lg mb-2">🔍 Debug Info:</h3>
        <pre class="text-xs bg-white p-2 rounded overflow-auto" style="max-height: 300px;">@System.Text.Json.JsonSerializer.Serialize(ViewBag.DebugInfo, new System.Text.Json.JsonSerializerOptions { WriteIndented = true })</pre>
    </div>
}